<div class="md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_stock %>

    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_product_stock_path(@admin_stock), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy", admin_product_stock_path(@admin_stock), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      <%= link_to "Back to stocks", admin_product_stocks_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
